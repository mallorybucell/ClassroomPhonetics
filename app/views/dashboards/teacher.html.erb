<div class="container">
  <div class="panel panel-warning">
    <div class="panel-heading">
      <h3 class="panel-title">Feedback Notifications</h3>
    </div>
    <div class="panel-body">
    <!-- notification badge -->
      <ul class="list-group">
  <li class="list-group-item">
    <span class="badge"><%= @total_outstanding_feedbacks %></span>
    Total responses needing feedback: 
    <% #FIXME notification display %>
  </li>
  <li class="list-group-item">
    <span class="badge"><%= @new_feedback_requests %></span>
    New responses submitted since last login: 
  </li>
</ul>
<!-- notification badge end -->
    </div>
  </div>
  <hr class="hr-primary" />
  <div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Assignment Notifications</h3>
  </div>
  <div class="panel-body">
    <table class='table table-hover'>
        <thead>
          <th>Lessons Assigned</th>
          <th>Current Status</th>
          <th>Due</th>
        </thead>
        <tbody>
          <% @by_lesson.each do |lesson| %>
          <% l = Lesson.find(lesson.lesson_id); a = l.assignments.first %>
          <tr>
            <td><%= link_to "#{l.description}", assignments_path %></td><td><%= a.current_status %></td><td><%=distance_of_time_in_words(a.due_at, Time.now) %> <%= a.get_relative %> </td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
</div>